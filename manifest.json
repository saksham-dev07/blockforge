{
  "manifest_version": 3,
  "name": "BlockForge - Advanced Ad & Tracker Blocker",
  "short_name": "BlockForge",
  "version": "1.0.0",
  "description": "Professional-grade ad blocker with AI-powered threat detection, anti-fingerprinting, and comprehensive privacy protection.",
  "author": "Saksham Agarwal",
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    },
    "default_title": "BlockForge - Click to view stats"
  },

  "background": {
    "service_worker": "background/background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],

  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "declarativeNetRequestWithHostAccess",
    "scripting",
    "alarms",
    "cookies"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ads_rules",
        "enabled": true,
        "path": "rules/ads.json"
      },
      {
        "id": "trackers_rules",
        "enabled": true,
        "path": "rules/trackers.json"
      },
      {
        "id": "miners_rules",
        "enabled": true,
        "path": "rules/miners.json"
      },
      {
        "id": "malware_rules",
        "enabled": true,
        "path": "rules/malware.json"
      }
    ]
  },

  "options_page": "settings/settings.html",

  "web_accessible_resources": [
    {
      "resources": [
        "inject/privacy-inject.js",
        "inject/fingerprint-protect.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "minimum_chrome_version": "102"
}
